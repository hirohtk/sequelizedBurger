<div class="container-fluid">

    <!--<div class="jumbotron" style="height: 50%">
        <h1 class="display-4" style="text-align:center;">Eat-Da-Burger</h1>

    </div>-->


    <div class="row">
        <div class="col-6 half">
            <h2>Burgers to eat:</h2>
            <ul>
                {{#each allBurgers}}
                {{#unless devoured}}
                <li><strong>Burger ID: </strong>{{id}} <button class="devour btn btn-light" data-id="{{id}}">
                        Devour this!
                    </button>
                    <br>
                    <strong>Burger Name: </strong>{{burger_name}} 
                    <br>
                    <!-- id that you have below comes from SQL that becomes autopopulated- this is one critical "bridge" that identifies 
    what is being clicked and translatng to backend/db-->
                    </li>
                <br>
                {{!> cats/cat-block sleep=true}}
                {{/unless}}
                {{/each}}
            </ul>
        </div>



        <div class="col-6 half">
            <h2>Burgers eaten:</h2>
            <ul>
                {{#each allBurgers}}
                {{#if devoured}}
                <li><strong>Burger ID: {{id}}</strong>
                    <br>
                    <strong>Burger Name: </strong>{{burger_name}}
                    <br>
                </li>
                <br>
                {{!> cats/cat-block sleep=false}}
                {{/if}}
                {{/each}}
            </ul>
        </div>

    </div>
    
        <div class="row">
            <div class="col-12">
                <h2 style="text-align: center;">Add a Burger!</h2>
            </div>

        </div>
        <div class="row text-center footer-ish">
            <div class="col-12">
                <form class="create-form">

                    <div class="form-group">
                        <label for="burger">Burger Name:</label>
                        <input type="textarea" id="burger" name="burgerName">
                    </div>

                    <button type="submit" class="btn btn-light">Add Burger</button>
                </form>
            </div>

        </div>
    
</div>


</div>